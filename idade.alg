algoritmo "idade"
// Função :
// Autor :
// Data : 18/03/2014
// Seção de Declarações 
var
anoAtual,anoNasc, idade: inteiro
inicio
// Seção de Comandos 
anoAtual <- 2014

escreva("escreva ano de nascimento: ")
leia(anoNasc)

idade <- anoAtual - anoNasc

escreva("sua idade é ", idade)


fimalgoritmo
